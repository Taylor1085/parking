<nav class="navbar bg-drk page-top">
  <div class="navbar-div">
    <h1><%= link_to 'TicketDB', 'tickets' =%></h1>
    <ul>
      <li>
        <%= link_to 'Tickets', tickets_path =%>
      </li>
      <li>
        <%= link_to 'Drivers', drivers_path =%>
      </li>
      <li>
        <%= link_to 'About', about_index_path =%>
      </li>
    </ul>
    <form class="form-search" action="/search" method="get">
    <input type="text" name="q" id="q" class="form-input input-user" placeholder="Search">
    <select name="category" id="category" class="form-input form-select">
    <option>Ticket</option>
    <option>Driver</option>
    </select>
    <input type="submit" name="commit" value="Search" class="btn btn-search" data-disable-with="Search">
    </form>
  </div>
</nav>
<div class="container">
  <h1>Ticket #<%= @ticket.ticketNum %></h1>
  <h2>Name: <%= link_to @ticket.driver.name, driver_path(@ticket.driver) %></h2>
  <h2>Phone Number: <%= @ticket.driver.phoneNum %></h2>
  <h2>Violation: <%= @ticket.violation %></h2>
  <h2>Street: <%= @ticket.street %></h2>
  <h2>Issue Date: <%= @ticket.date %></h2>
</div>
